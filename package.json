{
	"name": "vscode-get-nix-path",
	"displayName": "vscode get nix path",
	"description": "copy relative to workpsace root and absolute nix style /path",
	"version": "0.0.3",
	"publisher": "wernert",
	"author": "wernert",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:getNixPath.showclipboard",
		"onCommand:getNixPath.copyabsolutepath",
		"onCommand:getNixPath.copyrelativepath"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "getNixPath.showclipboard",
				"title": "show clipboard",
				"category": "GetNixPath"
			},
			{
				"command": "getNixPath.copyabsolutepath",
				"title": "get absolute path",
				"category": "GetNixPath"
			},
			{
				"command": "getNixPath.copyrelativepath",
				"title": "get relative path",
				"category": "GetNixPath"			
			}
		],
		"menus": {
      "explorer/context": [
        {
          "command": "getNixPath.copyrelativepath",
          "group": "6_copypath@50"
        },
        {
          "command": "getNixPath.copyabsolutepath",
          "group": "6_copypath@51"
        }
      ],
      "editor/title/context": [
        {
          "command": "getNixPath.copyrelativepath",
          "group": "6_copypath@50"
        },
        {
          "command": "getNixPath.copyabsolutepath",
          "group": "6_copypath@51"
        }
      ]
    }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
